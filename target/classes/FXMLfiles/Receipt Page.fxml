<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controllers.ReceiptController">
   <children>
      <Label fx:id="IDLabel" layoutX="14.0" layoutY="14.0" text="Confirm Order:" underline="true">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="numOfPizzaLabel" layoutX="66.0" layoutY="105.0" text="Number of Pizzas:" />
      <Label fx:id="numOfDrinkLabel" layoutX="66.0" layoutY="170.0" text="Total amount due:" />
      <Button layoutX="66.0" layoutY="255.0" mnemonicParsing="false" onAction="#printReceipt" prefHeight="83.0" prefWidth="132.0" text="Confirm Order and Print Receipt" wrapText="true" />
      <ScrollPane fx:id="myScroll" layoutX="300.0" layoutY="44.0" prefHeight="294.0" prefWidth="202.0">
         <content>
            <Text fx:id="myText" strokeType="OUTSIDE" strokeWidth="0.0" text="Press the Button For Your Receipt!" />
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
